{
  "manifest_version": 2,

  "name": "GifIt2Me",
  "description": "This extension will provide you with the link 
  to a gif based on the text you select",
  "version": "1.0",
  "icon": "icon.png",
  "locale": "en",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],

  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "GifIt2Me",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}
